@article{allen_intermediate_1990,
	title = {On {Intermediate} {Models} for {Barotropic} {Continental} {Shelf} and {Slope} {Flow} {Fields}. {Part} {I}: {Formulation} and {Comparison} of {Exact} {Solutions}},
	volume = {20},
	issn = {0022-3670, 1520-0485},
