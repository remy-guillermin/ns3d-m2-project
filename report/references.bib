@article{savva_inertia-gravity-wave_2021,
	title = {Inertia-gravity-wave scattering by three-dimensional geostrophic turbulence},
	volume = {916},
	issn = {0022-1120, 1469-7645},
	url = {https://www.cambridge.org/core/journals/journal-of-fluid-mechanics/article/inertiagravitywave-scattering-by-threedimensional-geostrophic-turbulence/824E2E5BDAC7C940D25F49923315DB78},
	doi = {10.1017/jfm.2021.205},
	abstract = {, In rotating stratified flows including in the atmosphere and ocean, inertia-gravity waves (IGWs) often coexist with geostrophically balanced turbulent flows. Advection and refraction by such flows lead to wave scattering, redistributing IGW energy in the position‚Äìwavenumber phase space. We give a detailed description of this process by deriving a kinetic equation governing the evolution of the IGW phase-space energy density. The derivation relies on the smallness of the Rossby number characterising the geostrophic flow, which is treated as a random field with known statistics, makes no assumption of spatial scale separation, and neglects wave‚Äìwave interactions. It extends previous work restricted to near-inertial waves, barotropic flows or waves much shorter than the flow scales. The kinetic equation describes energy transfers that are restricted to IGWs with the same frequency, as a result of the time scale separation between waves and flow. We formulate the kinetic equation on the constant-frequency surface ‚Äì a double cone in wavenumber space ‚Äì using polar spherical coordinates, and we examine the form of the two scattering cross-sections involved, which quantify energy transfers between IGWs with, respectively, the same and opposite directions of vertical propagation. The kinetic equation captures both the horizontal isotropisation and the cascade of energy across scales that result from scattering. We focus our attention on the latter to assess the predictions of the kinetic equation against direct simulations of the three-dimensional Boussinesq equations, finding good agreement.},
	language = {en},
	urldate = {2024-11-11},
	journal = {Journal of Fluid Mechanics},
	author = {Savva, M. a. C. and Kafiabad, H. A. and Vanneste, J.},
	month = jun,
	year = {2021},
	keywords = {internal waves, ocean processes, waves in rotating fluids},
	pages = {A6},
	file = {Full Text PDF:/Users/remyguillermin/Zotero/storage/74DMIEDJ/Savva et al. - 2021 - Inertia-gravity-wave scattering by three-dimensional geostrophic turbulence.pdf:application/pdf},
}

